<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="uber_frontent_validation.twig_extension"
                 class="Sleepness\UberFrontendValidationBundle\Twig\Extension\UberFrontendValidationTwigExtension"
                 public="true">
            <tag name="twig.extension"/>
            <call method="setAssetHelper">
                <argument type="service" id="twig.extension.assets" />
            </call>
        </service>

        <service id="uber_frontent_validation.form_extension"
                 class="Sleepness\UberFrontendValidationBundle\Form\Extension\UberFrontendValidationFormExtension">
            <tag name="form.type_extension" alias="form"/>
            <call method="setConstraintsFactory">
                <argument type="service" id="uber_frontent_validation.entity_constraints_factory" />
            </call>
        </service>

        <service id="uber_frontent_validation.entity_constraints_factory"
                 class="Sleepness\UberFrontendValidationBundle\Factory\EntityConstraintsFactory">
            <call method="setValidator">
                <argument type="service" id="validator" />
            </call>
        </service>

    </services>

</container>
