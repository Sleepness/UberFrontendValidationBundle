{% block form_widget_simple %}

    {% set field = pure_field_name(full_name) %}
    {% set cssClass = '' %}

    {% if field != '_token' %}
        {#{{ dump(entity_constraints[field]) }}#}
        {% set cssClass = entity_constraints[field][0]["constraint"] %}
    {% endif %}

    {% set type = type|default('text') %}
    <input data-constraint="{{ cssClass }}" type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}
           class="{{ cssClass }}"/>

{% endblock form_widget_simple %}
