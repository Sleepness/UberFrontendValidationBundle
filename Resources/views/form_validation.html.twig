{% stylesheets '@SleepnessUberFrontendValidationBundle/Resources/public/css/*' filter='yui_css' %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/sleepnessuberfrontendvalidation/css/validation.css') }}">
{% endstylesheets %}

{% javascripts '@SleepnessUberFrontendValidationBundle/Resources/public/js/*' filter='yui_js' %}
    <script type="text/javascript"
            src="{{ asset('bundles/sleepnessuberfrontendvalidation/js/field_name_parser.js') }}"></script>
    <script type="text/javascript"
            src="{{ asset('bundles/sleepnessuberfrontendvalidation/js/submit_validation.js') }}"></script>
    {% for validator in validators %}
        {% if (file_exists(uber_web_path~'/bundles/sleepnessuberfrontendvalidation/js/constraints/' ~ validator ~ '.js') == true) %}
            <script type="text/javascript"
                    src="{{ asset('bundles/sleepnessuberfrontendvalidation/js/constraints/' ~ validator ~ '.js') }}"></script>
        {% endif %}
    {% endfor %}
{% endjavascripts %}
